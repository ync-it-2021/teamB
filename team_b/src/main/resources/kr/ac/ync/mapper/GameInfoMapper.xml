<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ac.ync.mapper.GameInfoMapper">


	<select id="getGamesList" resultType="kr.ac.ync.domain.GameInfoVO">
	<![CDATA[
		SELECT * FROM game_info WHERE game_num > 0
		]]>
	</select>
	
		<select id="getGenre" resultType="kr.ac.ync.domain.GameInfoVO">
	<![CDATA[
				select * 
			from game_info, genre, size_spec
			where game_info.genre_id = genre.genre_id
		]]>
	</select>
	
		<select id="getSize" resultType="kr.ac.ync.domain.GameInfoVO">
	<![CDATA[
		select * 
			from game_info, genre, size_spec
			where game_info.size_id = size_spec.size_id
		]]>
	</select>
	

